<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.care.root.member.dao.MemberDAO">
  
  <insert id="memberSave">
  	insert into jsp_member values(#{id},#{pwd},#{name},#{addr})
  </insert>
  
  <resultMap id="member" type="com.care.root.member.dto.MemberDTO">
  	<result property="id" column="id"/>
  	<result property="pwd" column="pwd"/>
  	<result property="name" column="name"/>
  	<result property="addr" column="addr"/>  
  </resultMap>
  
  <select id="memberview" resultMap="member">
  	select * from jsp_member
  </select>
  
  <select id="info" resultMap="member">
  	select * from jsp_member where id=#{id}
  </select>
  
  <select id="loginChk" resultMap="member">
  	select * from jsp_member where id=#{id}
  </select>
  
 
  </mapper>